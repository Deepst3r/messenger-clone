<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="120dp" android:id="@+id/linearLayout3">

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@android:drawable/alert_light_frame"
            android:id="@+id/profile_imageview_latest_messages" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"/>
    <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"
            android:id="@+id/username_textview_latest_message" app:layout_constraintStart_toEndOf="@+id/profile_imageview_latest_messages"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/mesage_textview_latest_messages"
            app:layout_constraintVertical_chainStyle="packed"/>
    <TextView
            android:text="LatestMessage"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:id="@+id/mesage_textview_latest_messages"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/username_textview_latest_message"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="@+id/username_textview_latest_message"
    />
</androidx.constraintlayout.widget.ConstraintLayout>